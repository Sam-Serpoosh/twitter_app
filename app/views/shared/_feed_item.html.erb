<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), user_path(feed_item.user) %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, user_path(feed_item.user) %>
    </span>
    <span class="content"><%= feed_item.content %></span><br />
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
</tr>
