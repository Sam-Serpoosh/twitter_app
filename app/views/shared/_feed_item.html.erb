<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), user_path(feed_item.user) %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, user_path(feed_item.user) %>
    </span>
    <%= render "shared/micropost_content_and_timestamp", :micropost => feed_item %> 
  </td>
</tr>
